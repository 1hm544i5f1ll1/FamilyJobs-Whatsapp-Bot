{
  "name": "bilingual-whatsapp-assistant",
  "version": "1.0.0",
  "description": "Bilingual Customer Assistant for WhatsApp Web with RAG capabilities",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:admin\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:admin": "vite --config vite.config.ts",
    "build": "npm run build:server && npm run build:admin",
    "build:server": "tsc",
    "build:admin": "vite build --config vite.config.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": ["whatsapp", "chatbot", "rag", "bilingual", "customer-service"],
  "author": "Senior Full-Stack Engineer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "whatsapp-web.js": "^1.23.0",
    "qrcode-terminal": "^0.12.0",
    "openai": "^4.20.1",
    "franc-min": "^6.1.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "basic-auth": "^2.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/basic-auth": "^1.1.3",
    "@types/multer": "^1.4.11",
    "@types/qrcode-terminal": "^0.12.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "concurrently": "^8.2.2",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "vitest": "^1.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  }
}